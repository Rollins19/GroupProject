@model GroupProject.Models.FlightInfo

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Update Flight Status</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>FlightInfo</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.FlightNum)

    <div class="form-group">
        @Html.LabelFor(model => model.FlightStatus, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">

            @Html.DropDownListFor(model => model.FlightStatus, new List<SelectListItem>

                {
                   new SelectListItem{ Text="On-Time", Value = "On-Time" },
                   new SelectListItem{ Text="Cancelled", Value = "Cancelled" },
                   new SelectListItem{ Text="Delayed", Value = "Delayed" }
                })
            
            @Html.ValidationMessageFor(model => model.FlightStatus, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group" style="visibility:hidden">
        @Html.LabelFor(model => model.DepartureAirport, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.DepartureAirport, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.DepartureAirport, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group" style="visibility:hidden">
        @Html.LabelFor(model => model.ArrivalAirport, htmlAttributes: new { @class = "control-label col-md-2" })
